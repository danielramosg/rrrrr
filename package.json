{
  "name": "circular-economy",
  "version": "0.0.0",
  "description": "An exhibit simulating certain aspects of a circular economy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IMAGINARY/circular-economy.git"
  },
  "author": {
    "name": "Christian Stussak",
    "email": "christian.stussak@imaginary.org"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IMAGINARY/circular-economy/issues"
  },
  "homepage": "https://github.com/IMAGINARY/circular-economy#readme",
  "source": [
    "src/html/index.html",
    "src/html/marker.html"
  ],
  "engines": {
    "npm": ">=10.1.0",
    "node": ">=20.9.0"
  },
  "browserslist": [
    ">= 0.5%",
    "last 2 major versions",
    "not dead",
    "not Explorer <= 11",
    "not KaiOS > 0",
    "not OperaMini all"
  ],
  "devDependencies": {
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/plugin": "^2.12.0",
    "@parcel/transformer-inline-string": "^2.12.0",
    "@parcel/transformer-sass": "^2.12.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-compat": "^4.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-check-updates": "^16.14.15",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.12.0",
    "parcel-namer-rewrite": "^2.10.3-rc.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "serve-static": "^1.15.0",
    "simulation": "^4.0.0",
    "stylelint": "^16.2.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "tsx": "^4.7.1"
  },
  "@parcel/bundler-default": {
    "manualSharedBundles": [
      {
        "name": "vendor",
        "root": "src/ts/index.ts",
        "assets": [
          "node_modules/**/*"
        ]
      }
    ]
  },
  "parcel-namer-rewrite": {
    "silent": true,
    "rules": {
      "(.*).html": "$1.html",
      "(.*)\\.([^.]*)": "assets/$1.{hash}.$2"
    }
  },
  "scripts": {
    "serve": "parcel serve --dist-dir dist-dev",
    "clean": "rimraf assets index.html",
    "prebuild": "npm run clean",
    "build": "parcel build --no-cache --public-url '.' --dist-dir '.'",
    "format": "prettier --write '.'",
    "lint": "npm-run-all -s -c lint:**",
    "lint:scripts": "eslint src",
    "lint:styles": "stylelint 'src/{**/*,*}.{css,scss}'",
    "fix": "npm-run-all -s -c fix:**",
    "fix:scripts": "eslint --fix src",
    "fix:styles": "stylelint --fix 'src/{**/*,*}.{css,scss}'",
    "check-updates": "npm-check-updates",
    "convert-insightmaker-model": "tsx ./tools/convert-from-insight-maker.ts < src/insight-maker/CircularEconomyOfSmartPhones.InsightMaker > ./src/ts/circular-economy-model.ts; prettier --write ./src/ts/circular-economy-model.ts",
    "udp-websocket-bridge": "npm run udp-websocket-bridge:node",
    "udp-websocket-bridge:websocat": "websocat -E -b ws-l:127.0.0.1:3339 udp-l:127.0.0.1:3333",
    "udp-websocket-bridge:node": "tsx ./tools/udp-websocket-bridge.ts"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@types/assert": "^1.5.10",
    "@types/bootstrap": "^5.2.10",
    "@types/lodash": "^4.14.202",
    "@types/long": "^5.0.0",
    "@types/node": "^20.11.24",
    "@types/sortablejs": "^1.15.8",
    "@types/ws": "^8.5.10",
    "assert": "^2.1.0",
    "bootstrap": "^5.3.3",
    "buffer": "^6.0.3",
    "chart.js": "^4.4.2",
    "events": "^3.3.0",
    "lodash": "^4.17.21",
    "long": "^5.2.3",
    "os-browserify": "^0.3.0",
    "osc": "^2.4.4",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "sortablejs": "^1.15.2",
    "stream-browserify": "^3.0.0",
    "ts-essentials": "^9.4.1",
    "typed-emitter": "^2.1.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  }
}
